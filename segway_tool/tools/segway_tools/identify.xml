<tool id="segway_tool_identify" name="Annotate" version="0.0.1">
  <description>Annotate</description>
  <command>segway train --include-coords="$include_coords" --tracks-from="$tracks" --num-labels="$num_labels" "$genodata" "./traindir" > $output</command>
  <inputs>
    <param name="genodata" type="file" label="Genome Data"/>
    <param name="include_coords" type="file" label="Include Coords"/>
    <param name="tracks" type="file" label="Tracks"/>
    <param name="num_labels" type="integer" value="2" min="1" label="Number of labels"/>
  </inputs>
  <outputs>
    <data auto_format="true" name="output" />
  </outputs>

  <tests>
    <!--<test>
      <param name="input" value="fa_gc_content_input.fa"/>
      <output name="out_file1" file="fa_gc_content_output.txt"/>
    </test>-->
  </tests>

  <help>
  </help>

</tool>
